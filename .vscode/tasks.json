{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Windows - g++.exe build active file. OSX - clang++ build active file",
            "windows": {
                "command": "C:\\MinGW\\bin\\g++.exe",
                "args": [
                    "-g",
                    "${workspaceFolder}\\*.cpp",
                    "-o",
                    "MainApplicationWindows.exe"
                ],
                "options": {
                    "cwd": "${workspaceFolder}"
                },
                "problemMatcher": [
                    "$gcc"
                ],
                "group": {
                    "kind": "build",
                    "isDefault": true
                }
            },
            "osx": {
                "command": "/usr/bin/clang++",
                "args": [
                    "-g",
                    "*.cpp",
                    "-o",
                    "MainApplicationOSX.exe"
                ],
                "options": {
                    "cwd": "${workspaceFolder}"
                },
                "problemMatcher": [
                    "$gcc"
                ],
                "group": {
                    "kind": "build",
                    "isDefault": true
                }
            },
        }
    ]
}